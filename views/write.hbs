<div class="container">

    <div class="mt-3">

        <form method="POST" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Введите название твинса</label>
            <input id="input_text" type="text" data-length="10" name="title" class="form-control" placeholder="История покупки в магазине" maxlength="50" required>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Описание твинса</label>
            <input id="textarea2" class="form-control" id="exampleFormControlInput1" name="description" placeholder="Как я сходил в Пятёрочку и потерял там 1500 рублей" maxlength="120" required>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">История</label>
            <textarea class="form-control" name="content" id="textarea1" placeholder="Однажды..." required></textarea>
        </div>

        <div class="mb-3">
            <label for="formFile" class="form-label">Прикрепите картинку (опционально)</label>
            <input class="form-control" type="file" id="formFile" accept="image/png, image/jpeg" name="photo">
        </div>

        <button type="submit" class="btn btn-primary">Создать</button>

    </form>

    </div>

</div>